{
	"id": "animation_examples",
	"steps": [
		{
			"type": "scene",
			"id": "city_street",
			"mods": ["fog"]
		},

		{
			"type": "ui",
			"target": ["all"],
			"action": "show"
		},

		{
			"type": "show",
			"character": "mc",
			"orientation": "left",
			"position": {"l": 20, "r": "auto"},
			"scale": 1.3
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Вот несколько примеров анимаций!"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Сейчас опущу голову на 10%..."
		},

		{
			"type": "part-animate",
			"character": "mc",
			"part": "head",
			"styles": {
				"transform": "translateY(10%)",
				"transition": "transform 1s ease-in-out"
			},
			"duration": 1
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "И поднялась обратно!"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "А теперь попробую кашель с встряхиванием..."
		},

		{
			"type": "voice",
			"file": "audio/voice/man_cough.mp3"
		},

		{
			"type": "part-animate",
			"character": "mc",
			"part": "head",
			"class": "shake-head",
			"duration": 0.5
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "<p>[кашель]</p>"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Класс shake-head встроен в систему!"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Теперь попробую дрожание тела..."
		},

		{
			"type": "part-animate",
			"character": "mc",
			"part": "body",
			"class": "tremble",
			"duration": 1
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Холодно!"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "А вот повторяющееся движение вниз-вверх..."
		},

		{
			"type": "part-animate",
			"character": "mc",
			"part": "head",
			"styles": {
				"transform": "translateY(5%) rotate(5deg)",
				"transition": "transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55)"
			},
			"duration": 0.4
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "С использованием прямых CSS стилей и cubic-bezier!"
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Вот такие вот возможности!"
		},

		{
			"type": "hide",
			"character": "mc",
			"to": {"l": -30, "r": "auto"},
			"duration": 1
		},

		{
			"type": "dialogue",
			"character": "mc",
			"text": "Готово!"
		},

		{
			"type": "end"
		}
	]
}
